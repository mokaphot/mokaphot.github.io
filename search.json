---
---
[
  {% for post in site.posts %}
    {

      "title"    : "{{ post.title | strip_html | escape }}",
      "category" : "{{post.categories | join: ', '}}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "content": {{ post.content | jsonify }}

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
